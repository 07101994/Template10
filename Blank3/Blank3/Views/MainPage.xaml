<Page
    xmlns:local="using:Blank3.Views"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Blank3.ViewModels"
    xmlns:Common="using:Blank3.Common"
    x:Class="Blank3.Views.MainPage"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:MainPageViewModel />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <!-- content -->
        <StackPanel Margin="12" HorizontalAlignment="Left">

            <Common:MySpecial x:Name="Special1" x:DeferLoadStrategy="Lazy" />
            <Common:MySpecial x:Name="Special2" x:DeferLoadStrategy="Lazy" />
            <Common:MySpecial x:Name="Special3" x:DeferLoadStrategy="Lazy" />
            <Common:MySpecial x:Name="Special4" x:DeferLoadStrategy="Lazy" />
            <Common:MySpecial x:Name="Special5" />

        </StackPanel>
        
    </Grid>
</Page>
