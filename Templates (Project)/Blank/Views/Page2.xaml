<Page
    x:Class="Template10.Views.Page2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Template10.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Page.DataContext>
        <local:Page2ViewModel />
    </Page.DataContext>
    
    <Hub Header="{Binding Value}" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <HubSection Header="{x:Bind ViewModel.Value}">
            <DataTemplate>
                <Rectangle Height="100" Width="100" Fill="Red" />
            </DataTemplate>
        </HubSection>
    </Hub>
</Page>
