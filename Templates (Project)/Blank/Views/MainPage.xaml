<Page
    x:Class="Template10.Views.MainPage"
    xmlns:local="using:Template10.Views"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Template10.ViewModels"
    mc:Ignorable="d">
    
    <Page.DataContext>
        <vm:MainPageViewModel />
    </Page.DataContext>

    <Hub Header="{Binding Value}" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <HubSection Header="{x:Bind ViewModel.Value}">
            <DataTemplate>
                <Grid>
                    <StackPanel>

                        <!-- content -->
                        <HyperlinkButton 
                            Content="View source on github"
                            NavigateUri="https://github.com/Windows-XAML" />

                    </StackPanel>
                </Grid>
            </DataTemplate>
        </HubSection>

    </Hub>
</Page>
